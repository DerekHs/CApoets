      = @poem.title
    %h3 
      = @poem.student_name
      , Grade
      = @poem.grade
    %li
      Poet Teacher: 
      = @poem.teacher_name
    %li
      Teacher: 
      = @poem.student_teacher_name
    %li
      School: 
      = @poem.school
    %li
      County: 
      = @poem.county
